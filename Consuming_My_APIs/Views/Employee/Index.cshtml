@model IEnumerable<Consuming_My_APIs.Models.ModelEmployee>

@{
    ViewData["Title"] = "";
}

<h3>Employee List</h3>
<hr />
<p>
    <a asp-action="Add" class="btn btn-dark">Add New Employee</a>
</p>
<table class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeePhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeDept)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeePhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeDept)
                </td>
                <td>
                    @Html.ActionLink("", "Details",new {  id=item.EmployeeID},new{@class=" btn btn-sm  fas fa-info-circle",style="color:gray"}) |
             @Html.ActionLink("", "Delete", new {  id=item.EmployeeID}, new { @class=" btn btn-sm fas fa-trash ",style="color:red",onclick = "return confirm('Are sure wants to delete?');" })|
                    @Html.ActionLink("", "Edit", new {  id=item.EmployeeID},new{@class="btn btn-sm fas fa-edit",style="color:blue"}) |
                    @Html.ActionLink("", "Add", new {  id=item.EmployeeID},new{@class="btn btn-sm fas fa-plus",style="color:#32a834"}) 

                </td>
            </tr>
        }
    </tbody>
</table>
