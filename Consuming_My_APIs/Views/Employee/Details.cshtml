@model List<Consuming_My_APIs.Models.ModelEmployee>

@{
    ViewData["Title"] = "";
}
<div style="Text-align:center">
      <i class="fas fa-info-circle" style="font-size:60px;margin-bottom:5px;text-align:center"></i>
      </div>
<h5 style="text-align:center">Selected Employee Details</h5>
@foreach (var item in Model)
{
            <div>
                <hr />
                <dl class="row">
                    <dt class = "col-sm-2">
                @Html.DisplayNameFor(modelItem => item.EmployeeID)
                    <hr />
                    </dt>
                    <dd class = "col-sm-10">
                @Html.DisplayFor(modelItem => item.EmployeeID)
                     <hr />
                    </dd>
                    <dt class = "col-sm-2">
                @Html.DisplayNameFor(modelItem => item.EmployeeName)
                     <hr />
                    </dt>
                    <dd class = "col-sm-10">
                @Html.DisplayFor(modelItem => item.EmployeeName)
                      <hr />
                    </dd>
                    <dt class = "col-sm-2">
                @Html.DisplayNameFor(modelItem => item.EmployeePhone)
                    <hr />
                    </dt>
                    <dd class = "col-sm-10">
                @Html.DisplayFor(modelItem => item.EmployeePhone)
                     <hr />
                    </dd>
                    <dt class = "col-sm-2">
                @Html.DisplayNameFor(modelItem => item.EmployeeAddress)
                    </dt>
                    <dd class = "col-sm-10">
                @Html.DisplayFor(modelItem => item.EmployeeAddress)
                     <hr />
                    </dd>
                    <dt class = "col-sm-2">
                @Html.DisplayNameFor(modelItem => item.EmployeeDept)
                     <hr />
                    </dt>
                    <dd class = "col-sm-10">
                @Html.DisplayFor(modelItem => item.EmployeeDept)
                     <hr />
                    </dd>
                </dl>
            </div>
            <div>
                <hr/>
        @Html.ActionLink("Delete", "Delete", new { id =item.EmployeeID },new{@class="btn btn-danger"}) |
